<div class="page-content-wrapper ">

    <div class="container-fluid">
        <!-- end page title end breadcrumb -->
        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Hotel Details</h4>
                        <form action="/vendor/hotel/addhotel" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="input-title">Hotel Name</h6>
                                    <input type="text" class="form-control" name="hotel_name" id="hotel_name" onkeyup="HotelName()">
                                    <span id="hotel_name-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="input-title">Location</h6>
                                    <input type="text" class="form-control" maxlength="25" name="location"
                                        id="location" onkeyup="Hotellocation()">
                                    <span id="location-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="input-title">Front Office</h6>
                                    <input class="form-control" type="number" id="front_office" name="front_office" onkeyup="validatefrontOffice()">
                                    <span id="front_office-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="input-title">Mobile Number</h6>
                                    <input class="form-control" type="number" id="mobile" name="mobile" onkeyup="validateOfficeMobile()">
                                    <span id="mobile-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="input-title">Mail ID</h6>
                                    <input class="form-control" type="email" id="email" name="email" onkeyup="validateEmail()">
                                    <span id="email-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="input-title">Photos</h6>
                                    <input class="form-control mb-2" type="file" name="images" id="file-input" multiple>
                                    <div id="preview"></div>
                                </div>
                                <div class="col-md-3">
                                    <h6 class="input-title">Hotel Type</h6>
                                    <div class="input-group">
                                        <select class="form-control" name="type">
                                            {{#each hotelData.hotelTypes}}
                                            <option value="{{this.types}}">{{this.types}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <h6 class="input-title">Total Rooms</h6>
                                    <input class="form-control" type="number" id="total_rooms" name="total_rooms" onkeyup="validateRoom()">
                                    <span id="total_rooms-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="input-title">Map Link</h6>
                                    <input class="form-control" type="text" id="map" name="map" onkeyup="MapLink()">
                                    <span id="map-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-12">
                                    <h6 class="input-title">Facility's</h6>
                                    <div class="form-check d-flex justify-content-between flex-wrap" style=" gap:50px">
                                        {{#each hotelData.hotelFacility}}
                                        <div>
                                            <input class="form-check-input" type="checkbox" id="{{this.facility}}" name="facility" value="{{this.facility}}">
                                            <label class="form-check-label" for="{{this.facility}}">
                                                {{this.facility}}
                                            </label>
                                        </div>
                                        {{/each}}

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <h6 class="input-title">Full Address</h6>
                                    <input class="form-control" type="text" id="address" name="address" onkeyup="validateAddress()">
                                    <span id="address-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-12">
                                    <h6 class="input-title">Description</h6>
                                    <div class="input-group">
                                        <textarea class="form-control w-100" rows="3" id="description" name="description"
                                            onkeyup="validateDescription()"></textarea>
                                        <br>
                                        <span id="description-err" class="form-error-msg"></span>

                                    </div>
                                </div>
                            </div>
