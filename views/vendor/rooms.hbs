<div class="page-content-wrapper ">

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="btn-group float-right">
                        <a href="/vendor/hotels/rooms/addroom"><button type="button"
                                class="btn btn-primary waves-effect waves-light mb-3">
                                <i class="mdi mdi-home-variant mr-2"></i>Add New Room
                            </button></a>
                    </div>
                    {{!-- <h4 class="page-title">Datatable</h4> --}}
                </div>
            </div>
        </div>

        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">

                        <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap"
                            style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Room Count</th>
                                    <th>Type</th>
                                    <th>MRP Price</th>
                                    <th>Sales price</th>
                                    {{!-- <th>Description</th> --}}
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each rooms}}
                                <tr>
                                    <td>{{inc @index}}</td>
                                    <td>{{this.room_count}}</td>
                                    <td>{{this.type}}</td>
                                    <td>{{this.mrpprice}}</td>
                                    <td>{{this.salesprice}}</td>
                                    {{!-- <td>{{this.description}}</td> --}}
                                    <td>{{this.roomstatus}}</td>
                                    <td>
                                        <div class="dropdown d-inline-block float-right">
                                            <a class="nav-link dropdown-toggle arrow-none" id="dLabel6"
                                                data-toggle="dropdown" href="#" role="button" aria-haspopup="false"
                                                aria-expanded="false">
                                                <i class="fas fa-ellipsis-h font-20 text-muted"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel6">
                                                <a class="dropdown-item"
                                                    href="/vendor/hotels/edit-room/{{this._id}}">Edit
                                                </a>
                                                {{!-- <a href="/vendor/hotels/delete-room/{{this._id}}" class="dropdown-item"
                                                    onclick="return confirm('Are You wnat to Delete {{this.room_no}}')">Delete
                                                </a> --}}
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->

</div> <!-- content -->

