                                <div class="icon-contain">
                                    <div class="row">
                                        {{!-- <div class="col-3 align-self-center">
                                            <i class="fas fa-tasks text-gradient-success"></i>
                                        </div> --}}
                                        <div class="col-12 text-center">
                                            <h5 class="mt-0 mb-1">{{totalAmount.paypal.[0].total}}</h5>
                                            <p class="mb-0 font-12 text-muted">Paypal</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="card">
                            <div class="card-body justify-content-center">
                                <div class="icon-contain">
                                    <div class="row">
                                        {{!-- <div class="col-2 align-self-center">
                                            <i class="fas fa-users text-gradient-warning"></i>
                                        </div> --}}
                                        <div class="col-12 text-center">
                                            <h5 class="mt-0 mb-1">{{totalAmount.wallet.[0].total}}</h5>
                                            <p class="mb-0 font-12 text-muted">Wallet</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="card ">
                            <div class="card-body">
                                <div class="icon-contain">
                                    <div class="row">
                                        {{!-- <div class="col-2 align-self-center">
                                            <i class="fas fa-database text-gradient-primary"></i>
                                        </div> --}}
                                        <div class="col-12 text-center">
                                            <small class="mt-0 mb-1">Total Amount: <b>{{totalAmount.total}}</b></small>
                                            <h5 class="mt-0 mb-1">{{totalAmount.subTotal}}</h5>
                                            {{!-- <p class="mb-0 font-12 text-muted">Total Amount</p> --}}

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card ">
                            <div class="card-body">
                                <div class="icon-contain">
                                    {{#if totalAmount.transaction}}
                                    <a {{#if totalAmount.transaction.Transactions.[0].status}} href="/vendor/Withdraw"
                                        {{/if}} class="btn btn-outline-primary waves-effect waves-light w-100">Withdraw
                                        Amount</a>
                                        <p class="mb-0 font-12 text-muted text-warning text-center">Admin Charge: 15% !!</p>
                                    {{else}}
                                    <a href="/vendor/Withdraw"
                                        class="btn btn-outline-primary waves-effect waves-light w-100">Withdraw
                                        Amount</a>
                                        <p class="mb-0 font-12 text-muted text-warning text-center">Admin Charge: 15% !!</p>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">


                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                            style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each totalAmount.transaction.Transactions}}

                                <tr>
                                    <td>{{inc @index}}</td>
                                    <td class="text-primary"><strong>{{this.amount}}</strong></td>
                                    {{#if this.status}}
                                    <td class="text-success">Approved</td>
                                    {{else}}
                                    <td class="text-warning">Pending</td>
                                    {{/if}}
                                    <td>{{this.date}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->

    </div><!-- container -->

