                    <div class="col-sm-12">


                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-lg-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="icon-contain">

                                    <div class="row">
                                        {{!-- <div class="col-3 align-self-center">
                                            <i class="far fa-gem text-gradient-danger"></i>
                                        </div> --}}
                                        <div class="col-12 text-center">
                                            <h5 class="mt-0 mb-1">{{totalAmount.razorpay.[0].total}}</h5>
                                            <p class="mb-0 font-12 text-muted">Razorpay</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
