<div class="page-content-wrapper ">

    <div class="container-fluid">
        <!-- end page title end breadcrumb -->
        <div class="row mt-3">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Room Details</h4>
                        <form action="/vendor/hotels/edit-room/{{editroom._id}}" method="post"
                            enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-4">
                                    <h6 class="input-title">Room Count</h6>
                                    <input type="text" class="form-control" name="room_count" id="room-count" onkeyup="validateRoomCount()"
                                        value="{{editroom.room_count}}">
                                    <span id="room-count-err" class="form-error-msg"></span>

                                </div>
                                <div class="col-md-4">
                                    <h6 class="input-title">Room Type</h6>
                                    <div class="input-group">
                                        <select class="form-control" name="type">
                                            {{#each roomtypes}}
                                            <option value="{{this.type}}" {{#if this.selected }}selected{{/if}}>
                                                {{this.type}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="input-title">Room Status</h6>
                                    <div class="input-group text-capitalize">
                                        <select class="form-control" name="roomstatus">
                                            {{#each roomstatus}}
                                            <option value="{{this.status}}" {{#if this.selected }}selected{{/if}}>
                                                {{this.status}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="input-title">MRP Price</h6>
                                    <input type="text" class="form-control" maxlength="25" name="mrpprice" id="mrpprice"
                                        onkeyup="validateMrpPrice()" value="{{editroom.mrpprice}}">
                                    <span id="mrpprice-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="input-title">Sales Price</h6>
                                    <input type="text" class="form-control" maxlength="25" name="salesprice"
                                        id="salesprice" onkeyup="validateSalesPrice()" value="{{editroom.salesprice}}">
                                    <span id="salesprice-err" class="form-error-msg"></span>
                                </div>
                                <div class="col-md-4">
                                    <h6 class="input-title">Photos</h6>
                                    <p>Old Images</p>
                                    {{#each editroom.image}}
                                    <img src="/uploads/rooms/{{this}}" alt="" style="width: 100px; height:auto;" id="" class="py-3" id="hotel-img">
                                    {{/each}}
                                    <p>New Images</p>
                                    <div id="preview"></div>
                                    <input class="form-control" type="file" id="file-input" name="images" multiple>
                                    <span id="image-err" class="form-error-msg">{{imageErr}}</span>
                                </div>


                                <div class="col-md-12">
                                    <h6 class="input-title">Description</h6>
                                    <div class="input-group">
                                        <textarea class="form-control w-100" rows="3" id="description" name="description"
                                            onkeyup="validateRoomDescription()">{{editroom.description}}</textarea>
                                        <span id="description-err" class="form-error-msg"></span>

                                    </div>
                                </div>
                            </div>
                            <span id="submit-err" class="form-error-msg"></span>
                            <button type="submit" class="btn btn-primary waves-effect waves-light mt-3 w-100"
                                onclick="return validateAddRoom(event)">
                                Add Room
                            </button>
                        </form>

                    </div>
                </div>
            </div><!-- end col -->
        </div>

    </div><!-- container -->

</div> <!-- Page content Wrapper -->

</div> <!-- content -->

