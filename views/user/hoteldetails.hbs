<!-- ========== MAIN ========== -->
<main class="room">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- ITEM -->
                <div class="hotel-details mb-2">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-lg-4 col-sm-4 col-4">
                                    <div class="hotel-label">Location : </div>
                                </div>
                                <div class="col-lg-8 col-sm-8 col-8">
                                    <div class="hotel-value">{{singleHotel.location}}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-lg-4 col-sm-4 col-4">
                                    <div class="hotel-label">Front Office : </div>
                                </div>
                                <div class="col-lg-8 col-sm-8 col-8">
                                    <div class="hotel-value"><a
                                            href="tel:{{singleHotel.front_office}}">{{singleHotel.front_office}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-lg-4 col-sm-4 col-4">
                                    <div class="hotel-label">Mobile : </div>
                                </div>
                                <div class="col-lg-8 col-sm-8 col-8">
                                    <div class="hotel-value"><a
                                            href="tel:{{singleHotel.mobile}}">{{singleHotel.mobile}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hotel-details mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-lg-4 col-sm-4 col-4">
                                    <div class="hotel-label">Email : </div>
                                </div>
                                <div class="col-lg-8 col-sm-8 col-8">
                                    <div class="hotel-value"><a
                                            href="mailto:{{singleHotel.email}}">{{singleHotel.email}}</a></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-lg-4 col-sm-4 col-4">
                                    <div class="hotel-label">Hotel Type : </div>
                                </div>
                                <div class="col-lg-8 col-sm-8 col-8">
                                    <div class="hotel-value">{{singleHotel.type}}</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-lg-4 col-sm-4 col-4">
                                    <div class="hotel-label">Address : </div>
                                </div>
                                <div class="col-lg-8 col-sm-8 col-8">
                                    <div class="hotel-value">{{singleHotel.address}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="progress-item">
                    <div class="row">
                        <div class="col-lg-12 col-sm-12 col-12">
                            <div class="hotel-value">
                                <iframe src="{{singleHotel.map}}" width="100%" height="250" style="border:0;"
                                    allowfullscreen="" loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
