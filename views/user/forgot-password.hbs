<div class="body-login">

    <section class="main">
        <div class="container ">
            <div class="row justify-content-md-center ">
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 left_box">
                    <div>
                        <h5>Lorem Ipsum Simply Text of</h5>
                    </div>

                    <div>
                        <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Natus, architecto aliquam iste
                            provident, dignissimos excepturi vel esse numquam quos consequuntur ab</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 right_box">
                    <div class="cnt">
                        <div class="login">
                            <h6 class="text-uppercase"> Forgot Account </h6>
                            {{#if forgotErr}}
                            <div class="alert alert-danger" role="alert" id="checking">
                                {{forgotErr}}
                            </div>
                            {{/if}}
                            <form method="POST" action="/forgot_password" class="mt-3">
                                <div class="form-group pas_inp mb-lg-0">
                                    <label for="" style=" width: 90%; margin: 0;" class="text-capitalize">
                                        <i class="fas fa-key"></i> OTP
                                    </label>
                                    <input type="text" class="form-control password" id="" name="otp">
                                </div>
                                <div class="form-group pas_inp mb-lg-0">
                                    <label for="password" style=" width: 90%; margin: 0;" class="text-capitalize">
                                        <i class="fa fa-unlock-alt"></i> Password
                                    </label>
                                    <input type="password" class="form-control password" id="password" name="password">
                                </div>
                                <button type="submit" class="btn sub-btn">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
