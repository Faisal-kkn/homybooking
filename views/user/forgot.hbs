<div class="body-login">

    <section class="main">
        <div class="container ">
            <div class="row justify-content-md-center ">
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 left_box">
                    <div>
                        <h5>Lorem Ipsum Simply Text of</h5>
                    </div>

                    <div>
                        <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Natus, architecto aliquam iste
                            provident, dignissimos excepturi vel esse numquam quos consequuntur ab</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 right_box">
                    <div class="cnt">
                        <div class="login">
                            <h6 class="text-uppercase"> Forgot Password </h6>
                            {{#if forgotErr}}
                            <div class="alert alert-danger" role="alert" id="checking">
                                {{forgotErr}}
                            </div>
                            {{/if}}
                            <form method="POST" id="forgot" action="/forgot">
                                <div class="form-group user_inp mb-lg-0 position-relative">
                                    <label for="usermobile" style="margin:0;" class="text-capitalize">
                                        <i class="fa fa-mobile"></i> Mobile Number
                                    </label>
                                    <input type="number" class="form-control user" id="usermobile" name="mobile" onkeyup="validatePhone()">
                                    <span id="phone-error" class="form-error-msg"></span>
                                </div>
                                <button type="submit" class="btn sub-btn" onclick="return validatemobileForm(event)">Varify Mobile</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
