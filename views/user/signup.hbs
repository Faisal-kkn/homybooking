<div class="body-login">

    <section class="main">
        <div class="container ">
            <div class="row justify-content-md-center ">
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 left_box">
                    <div>
                        <h5>Lorem Ipsum Simply Text of</h5>
                    </div>

                    <div>
                        <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Natus, architecto aliquam iste
                            provident, dignissimos excepturi vel esse numquam quos consequuntur ab</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 right_box">
                    <div class="cnt">
                        <div class="login">
                            <h6 class="text-uppercase"> Signup </h6>
                            <p class="text-danger">{{signerr}}</p>

                            <form action="/signup" method="POST">
                                <div class="form-group user_inp mb-lg-0">
                                    <label for="signupname" style="margin: 0;" class="text-capitalize">
                                        <i class="fa fa-user"></i> Full Name
                                    </label>
                                    <input type="text" class="form-control user" id="signupname" aria-describedby="nameHelp" name="name"
                                        onkeyup="validateName()">
                                    <span id="signupnameerr" class="form-error-msg"></span>
                                </div>
                                <div class="form-group user_inp mb-lg-0">
                                    <label for="usermobile" style="margin: 0;" class="text-capitalize"> <i
                                            class="fa fa-mobile"></i> Mobile Number</label>
                                    <input type="number" class="form-control user" id="usermobile" aria-describedby="emailHelp" name="mobile"
                                        onkeyup="validatePhone()">
                                    <span id="phone-error" class="form-error-msg"></span>

                                </div>
                                <div class="form-group user_inp mb-lg-0">
                                    <label for="email" style="margin: 0;" class="text-capitalize">
                                        <i class="fa fa-envelope"></i> Email Address
                                    </label>
                                    <input type="email" class="form-control user" id="email" name="email" onkeyup="validateEmail()">
                                    <span id="emailError" class="form-error-msg"></span>

                                </div>

                                <button type="submit" class="btn sub-btn" onclick="return validateSigninForm(event)">SignUp</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
