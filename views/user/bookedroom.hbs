<!-- ========== PAGE TITLE ========== -->
<div class="page-title gradient-overlay op5" style="background: url(/uploads/rooms/{{singleRoom.image.[0]}}); background-repeat: no-repeat;
    background-size: cover; background-position: center;">
    <div class="container">
        <div class="inner">
            <h1>{{singleRoom.type}} Room</h1>
            <div class="room-details-price">
                <div class="room-price"><del style="font-size: 16px; font-weight: 400;">₹{{singleRoom.mrpprice}}</del>
                    &nbsp;₹{{singleRoom.salesprice}}</div>
            </div>
            <ol class="breadcrumb">
                <li>
                    <a href="./">Home</a>
                </li>
                <li>
                    <a href="./">Rooms</a>
                </li>
                <li>Single Room</li>
            </ol>
        </div>
    </div>
</div>
